{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "outDir": "./dist",
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
  },
  "include": ["src"],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
